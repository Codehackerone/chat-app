<%- include('../layouts/boilerplate') %>
<link rel="stylesheet" href="/css/userdetails.css">
<body>
    <p class="text-5xl text-center pt-6">User Details</p>
    <div class="min-h-screen pt-20 px-10">
        <div class="bg-white p-10 rounded-lg shadow md:w-3/4 mx-auto lg:w-1/2">
            <form action="/users/userdetails" method="POST">
                <div class="mb-5">
                    <label for="username" class="block mb-2 font-bold text-gray-600">Username <span class="text-red-500">*</span></label>
                    <input type="text" onkeyup="checkusername();" required id="username" name="username" placeholder="muskelon985" class="border border-gray-300 shadow p-3 w-full rounded">
                    <p class="text-sm text-red-400 mt-2" hidden id="username-wrong">Username already taken</p>
                    <p class="text-sm text-green-400 mt-2" hidden id="username-correct">Looks Good!</p>
                </div>
                <div class="mb-5">
                    <label for="dob" class="block mb-2 font-bold text-gray-600">Date of Birth <span class="text-red-500">*</span></label>
                    <input type="date" onchange="checkdob();" required id="dob" name="dob" placeholder="Elon Musk" class="border border-gray-300 shadow p-3 w-full rounded">
                    <p class="text-sm text-red-400 mt-2" hidden id="dob-wrong">You have to be older than 15 years.</p>
                    <p class="text-sm text-green-400 mt-2" hidden id="dob-correct">Looks Good!</p>
                </div>
                <div class="mb-5">
                    <label for="address" class="block mb-2 font-bold text-gray-600">Address <span class="text-red-500">*</span></label>
                    <input type="text" onkeyup="checkaddress();" required id="address" name="address" placeholder="Seattle, California, USA" class="border border-gray-300 shadow p-3 w-full rounded">
                    <p class="text-sm text-red-400 mt-2" hidden id="address-wrong">Please enter a valid address</p>
                    <p class="text-sm text-green-400 mt-2" hidden id="address-correct">Looks Good!</p>
                </div>
                <div class="mb-10">
                    <label for="phone" class="block mb-2 font-bold text-gray-600">Phone Number <span class="text-red-500">*</span></label>
                    <input type="text" required id="phone" name="phone" placeholder="9876543210" class="border border-gray-300 shadow p-3 w-full rounded"
                    onkeyup="checkphone()">
                    <p class="text-sm text-red-400 mt-2" hidden id="phone-wrong">Please enter a valid phone number</p>
                    <p class="text-sm text-green-400 mt-2" hidden id="phone-correct">Looks Good!</p>
                </div>
                <button type="submit" id="submit" disabled
                class="transition duration-500 ease-in-out block w-full bg-blue-500 hover:bg-blue-700 text-white font-bold p-4 rounded">Submit</button>
            </form>
    </div>
    </div>
</body>
<script src="/js/userdetails.js"></script>
